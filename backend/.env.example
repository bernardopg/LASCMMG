# ==================== BASIC CONFIGURATION ====================
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173

# ==================== SECURITY KEYS ====================
# Generate new secrets for production!
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
COOKIE_SECRET=your_cookie_secret_here_minimum_32_characters
CSRF_SECRET=your_csrf_secret_here_minimum_32_characters

# ==================== REDIS CONFIGURATION ====================
# Uncomment and configure for production
# REDIS_URL=redis://localhost:6379

# ==================== BACKUP CONFIGURATION ====================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BACKUP_ENCRYPTION_KEY=your_256_bit_encryption_key_here

# ==================== PERFORMANCE MONITORING ====================
PERFORMANCE_MONITORING_ENABLED=true
QUERY_SLOW_THRESHOLD_MS=100

# ==================== DATABASE CONFIGURATION ====================
DB_PATH=./lascmmg.db
DB_BACKUP_PATH=./backups/

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=info
AUDIT_LOG_ENABLED=true

# ==================== PRODUCTION ONLY ====================
# Use these in production environment
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/private.key
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
